---
import Link from "../components/Link.astro";

const links = {
  facebook: "https://www.facebook.com/profile.php?id=100013755789824",
  instagram: "https://www.instagram.com/maria.egedal/?hl=da",
  linkedin: "https://www.linkedin.com/in/maria-xia-egedal-9a22b8244/",
};
---

<section
  class="grid grid-cols-12 items-centermx-[3%] bg-primary-500 lg:bg-transparent px-[5%] lg:pt-20"
>
  <div
    class="col-start-1 col-end-9 flex items-center gap-[clamp(0.6rem,2cqw,1rem)]"
  >
    <div class="flex items-center gap-[clamp(0.6rem,2cqw,1rem)]">
      <!-- Facebook -->
      <Link
        href={links.facebook}
        target="_blank"
        ariaLabel="Facebook"
        class="no-underline"
      >
        <span
          class="group relative block h-[clamp(1.8rem,5cqw,2.8rem)] w-[clamp(1.8rem,5cqw,2.8rem)]"
        >
          <img
            src="/img/face.svg"
            alt="Facebook"
            class="absolute inset-0 h-full w-full object-contain transition-opacity duration-200 ease-out group-hover:opacity-0"
          />
          <img
            src="/img/hover-face.svg"
            alt=""
            aria-hidden="true"
            class="absolute inset-0 h-full w-full object-contain opacity-0 transition-opacity duration-200 ease-out group-hover:opacity-100"
          />
        </span>
      </Link>

      <!-- Instagram -->
      <Link
        href={links.instagram}
        target="_blank"
        ariaLabel="Instagram"
        class="no-underline"
      >
        <span
          class="group relative block h-[clamp(1.8rem,5cqw,2.8rem)] w-[clamp(1.8rem,5cqw,2.8rem)]"
        >
          <img
            src="/img/insta.svg"
            alt="Instagram"
            class="absolute inset-0 h-full w-full object-contain
             transition-opacity duration-200 ease-out group-hover:opacity-0"
          />
          <img
            src="/img/hover-insta.svg"
            alt=""
            aria-hidden="true"
            class="absolute inset-0 h-full w-full object-contain
             opacity-0 transition-opacity duration-200 ease-out group-hover:opacity-100"
          />
        </span>
      </Link>

      <!-- LinkedIn -->
      <Link
        href={links.linkedin}
        target="_blank"
        ariaLabel="LinkedIn"
        class="no-underline"
      >
        <span
          class="group relative block h-[clamp(1.8rem,5cqw,2.8rem)] w-[clamp(1.8rem,5cqw,2.8rem)]"
        >
          <img
            src="/img/in.svg"
            alt="LinkedIn"
            class="absolute inset-0 h-full w-full object-contain
             transition-opacity duration-200 ease-out group-hover:opacity-0"
          />
          <img
            src="/img/hover-in.svg"
            alt=""
            aria-hidden="true"
            class="absolute inset-0 h-full w-full object-contain
             opacity-0 transition-opacity duration-200 ease-out group-hover:opacity-100"
          />
        </span>
      </Link>
    </div>

    <p
      class="ml-[clamp(0.5rem,2cqw,1.25rem)] font-display text-[clamp(1.1rem,3.2cqw,1.8rem)] text-white"
    >
      ByXia.dk - August 2025
    </p>
  </div>

  <!-- Højre: “by XIA” -->
  <p class="col-start-9 col-end-13 justify-self-end items-baseline">
    <span class="font-black text-white text-[clamp(0.9rem,2.4cqw,1.2rem)]"
      >by</span
    >
    <span
      class="font-black uppercase text-white text-[clamp(1.6rem,5cqw,2.6rem)]"
      >XIA</span
    >
  </p>
</section>
