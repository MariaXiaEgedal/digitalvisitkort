---
// Henter parametrene fra Astro.props
const {
  htmlheading = "h2",
  size = "medium",
  font = "sans",
  stylingclasses = "",
} = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  large:
    "text-7xl sm:text-[8rem] md:text-[9rem] lg:text-[12rem] xl:text-[16rem] 2xl:text-[20rem] text-primary-500 duration-200 ease-out",
  medium:
    "text-white leading-none  text-3xl sm:text-4xl md:text-4xl lg:text-5xl xl:text-6xl",
  small:
    "text-white mb-[10%] text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl",
  xsmall:
    "text-primary-500  text-base sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display: "font-display",
  sans: "font-sans",
  serif: "font-serif",
};
---

<Htmlheading class:list={[sizeClasses[size], fontClasses[font], stylingclasses]}
  ><slot /></Htmlheading
>
